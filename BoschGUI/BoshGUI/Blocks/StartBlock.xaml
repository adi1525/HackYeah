<UserControl x:Class="BoshGUI.Blocks.StartBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BoshGUI.Blocks"
             mc:Ignorable="d" 
             Height="60" Width="290" HorizontalAlignment="Left" VerticalAlignment="Top">
    <Grid>
        <Border Background="#FF95CF65" BorderBrush="#FF1F1F1F" CornerRadius="5" BorderThickness="1">
        </Border>
        <Border HorizontalAlignment="Left" VerticalAlignment="Bottom" BorderBrush="#FF2C2C2C" BorderThickness="1" Margin="28,0,0,0">
            <Rectangle Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="0" Width="42" Fill="#FF707070"/>
        </Border>
        <TextBlock Text="START" FontSize="36" FontFamily="Cambria" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0"/>
            
    </Grid>
</UserControl>
